<style>
.errord li {
margin-top:-5px;
margin-bottom:-1px;
color:red;
}
.errord ul {
list-style: none;
padding-left:2px;
}
</style>  
<div id="content" class="clearfix">
    <div class="contentwrapper">

        <div class="heading">

            <h3>Mon compte</h3>                    
            
        </div>
        <div class="row-fluid">
            <form action="{{ path('fos_user_change_password') }}" {{ form_enctype(form) }} method="POST" >
            <p>&nbsp;</p>
            <div class="box" >

                <div class="title">

                    <h4>
                        <span class="icon16 icomoon-icon-user-2"> Modifier mon compte</span>
                    </h4>

                </div>
                
                <div class="content" >
                        <div class="form-row row-fluid" style="margin-left:-80px;">
                            <div class="span12">
                                <div class="row-fluid">
                                    <label class="form-label span3" for="required">Mot de passe actuel :</label>
                                    {{ form_widget(form.current_password ,{ 'attr': { 'class':'span9'}} )}} 
                                </div>
                                 <div class="row-fluid errord" style="margin-left: 240px; margin-bottom: -20px;">
                                        {{ form_errors(form.current_password  )}} 
                                    </div>
                                    
                            </div>
                        </div>
                        <div class="form-row row-fluid" style="margin-left:-80px;">
                            <div class="span12">
                                <div class="row-fluid">
                                    <label class="form-label span3" for="required1">Nouveau mot de passe :</label>
                                  {{ form_widget(form.plainPassword.first ,{ 'attr': { 'class':'span9'}} )}} 
                                </div>
                                  <div class="row-fluid errord" style="margin-left: 240px; margin-bottom: -20px;">
                                        {{ form_errors(form.plainPassword.first ,{ 'attr': { 'class':'span9'}} )}} 
                                    </div>   
                                    
                            </div>
                        </div> 
                         <div class="form-row row-fluid" style="margin-left:-80px;">
                            <div class="span12">
                                <div class="row-fluid">
                                    <label class="form-label span3" for="required2">Vérification :</label>
                                      {{ form_widget(form.plainPassword.second ,{ 'attr': { 'class':'span9'}} )}} 
                                </div>
                               <div class="row-fluid errord" style="margin-left: 240px; margin-bottom: -20px;">
                                        {{ form_errors(form.plainPassword.second ,{ 'attr': { 'class':'span9'}} )}} 
                                    </div> 
                                    
                            </div>
                        </div> 
                </div>
            {{ form_rest(form) }}
            </div>
            <div style="float:right;">
                <button type="submit"  class="btn btn-warning"><i class="icon-white icon-pencil"></i> Mettre à jour</button>
            </div>
            </form>
        </div>
    </div>
</div>

