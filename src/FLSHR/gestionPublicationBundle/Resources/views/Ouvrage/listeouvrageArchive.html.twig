{% extends 'GestionPublicationBundle::gestionPublication/base.html.twig' %}
{% block title %}FLSHR Gestion des publications | archive{% endblock %} 
{% block stylesheets %}
{{ parent() }}
        <link href="{{ asset('css/itoast.css') }}" rel="stylesheet" type="text/css" />
        <link href="{{ asset('css/pirobox/style.css') }}" rel="stylesheet" type="text/css" />
{% endblock %} 
  {%block connection %}
<div style="float:right;padding-top:20px">
    <ul class="nav">
        <li><a href="{{ path('fos_user_security_login') }}"><span class="icon16 icomoon-icon-exit"></span> Se connecter</a></li>
    </ul>          
</div>
{% endblock %}      
{% block content %}
{% set productexpire=0 %}
<div id="content" class="clearfix">
    <div class="contentwrapper">
        <div class="heading">
            <h3>Liste des ouvrages</h3>                    
            <div class="cmd">

            </div>
        </div> 
        <div class="row-fluid">
            <h2>&nbsp;</h2>
            <table class="responsive table table-bordered">
                <thead>
                    <tr>
                        <th>Titre</th>
                        <th>Auteur</th>
                        <th>Edition</th>
                        <th>ISBN</th>
                        <th>ISSN</th>
                        <th>Prix</th>
                    </tr>
                </thead>
                <tbody>
                                     {% for entity in entities|reverse %}
                        
                             <tr>
                            <td>{{ entity.titre }}</td>
                            <td>{{ entity.auteur }}</td>
                            <td>{{ entity.edition }}</td>
                            <td>{{ entity.isbn }}</td>
                            <td>{{ entity.issn }}</td>
                            <td>{{ entity.prix }} dhs</td>
                            
                        </tr>
                          
                                  {% endfor %}
                    </tbody>
                </table>
                <div class="pagination" style="width:900px;">
                    <ul>
                          {# On utilise la fonction range(a, b) qui cr√©e un tableau de valeurs entre a et b #}
                          {% for p in range(1, nombrePage) %}
                            <li{% if p == page %} class="active"{% endif %}>
                                <a href="{{ path('ouvrage_afficher', {'page': p}) }}">{{ p }}</a>
                            </li>
                          {% endfor %}
                        </ul>
                </div>
                </div>
  
            </div>
        </div>
{% endblock %}
