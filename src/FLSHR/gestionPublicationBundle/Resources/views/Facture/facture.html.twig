{% extends 'GestionPublicationBundle::gestionPublication/base.html.twig' %}
{% block title %}FLSHR Gestion des publications | Factures{% endblock %}
{%block connection %}
<div style="float:right;padding-top:20px">
<ul class="nav">
<li><a href="{{ path('fos_user_security_logout') }}"><span class="icon16 icomoon-icon-exit"></span>Se déconnecter</a></li>
</ul>          
</div>
{% endblock %}
{% block stylesheets %}
{{ parent() }}
<link href="{{ asset('css/pirobox/style.css') }}" rel="stylesheet" type="text/css" />
{% endblock %}
{% block content %}
  <div id="content" class="clearfix">
            <div class="contentwrapper">
                <div class="heading">
                    <h3>Liste des factures</h3>                    
				<div class="cmd">
				
				</div>
                </div>
                <div class="row-fluid">
                    <h2>&nbsp;</h2>
                            <table class="responsive table table-bordered">
                                <thead>
                                  <tr>
                                    <th>Date de commande</th>
                                     <th>Date de facture</th>
                                    <th>Réduction</th>
                                    <th>Email du client</th>
                                    <th>Profession</th>
                                    <th>Nombre d'ouvrage</th>
                                    {% if is_granted('ROLE_SUPER_ADMIN') %}
                                       <th>Vendeur</th>
                                    {% endif %}    
                                    <th>Détails</th>
                                  </tr>
                                </thead>
                                <tbody>
                                    {% if is_granted('ROLE_SUPER_ADMIN') %}
                                        {% for entity in entities %}
                                    <tr>
                                        <td>{{ entity.com.datecommande|date('Y-m-d') }}</td>
                                        <td>{{ entity.datefacture|date('Y-m-d H:m:s') }}</td>
                                        {% if entity.com.reduction==100 %}
                                        <td>don</td>
                                        {% else %}
                                        <td>{{ entity.com.reduction }}%</td>
                                        {% endif %}
                                        <td>{{ entity.com.uti.email }}</td>
                                        <td>{{ entity.com.uti.typeutilisateur }}</td>
                                        <td>{{ entity.com.detailcomande|length }}</td>
                                        <td>{{ entity.com.user }}</td>
                                        <td>
                                            <a href="{{path('ouvrage_detail_facture', {'id': entity.id} ) }}" 
                                              rel="iframe-800-520"  class="pirobox_gall1"><span class="icon-book" ></span></a>
                                        </td>
                                    </tr>
                                  {% endfor %}
                                    {% else %}
                                    {% for entity in entities %}   
                                    <tr>
                                        <td>{{ entity.com.datecommande|date('Y-m-d') }}</td>
                                        <td>{{ entity.datefacture|date('Y-m-d H:m:s') }}</td>
                                        <td>{{ entity.com.reduction }}%</td>
                                        <td>{{ entity.com.uti.email }}</td>
                                        <td>{{ entity.com.uti.typeutilisateur }}</td>
                                        <td>{{ entity.com.detailcomande|length }}</td>
                                        <td>
                                            <a href="{{path('ouvrage_detail_facture', {'id': entity.id} ) }}" 
                                            rel="iframe-800-520"  class="pirobox_gall1"><span class="icon-book" ></span></a>
                                        </td>
                                    </tr>
                                  {% endfor %}
                                    {% endif %}
                                    
                                     
                                </tbody>
                      
                                </table>
                    {% if entities|length != 0 %}
                    <div class="pagination">
                        <ul>
                          {# On utilise la fonction range(a, b) qui crée un tableau de valeurs entre a et b #}
                          {% for p in range(1, nombrePage) %}
                            <li{% if p == page %} class="active"{% endif %}>
                              <a href="{{ path('gestion_publication_facture', {'page': p}) }}">{{ p }}</a>
                            </li>
                          {% endfor %}
                        </ul>
                      </div>
                    {% endif %}
					</div>
				</div>
                </div>
{% endblock %}
{% block javascripts %}
<script type="text/javascript" src="{{ asset('js/jquery1.8.3.min.js') }}"></script>
<script type="text/javascript" src="{{ asset('js/bootstrap/bootstrap.js') }}"></script>  
<script type="text/javascript" src="{{ asset('js/jquery.cookie.js') }}"></script>
